<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phoyou.Views.AssignmentDetailPage">
    <StackLayout Padding="20">
        <Label Text="Opdracht Details" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="{Binding Title}" FontSize="18" Margin="0,10,0,0"/>
        <Label Text="{Binding Description}" FontSize="14" TextColor="Gray"/>
        <Label Text="Deadline: " FontSize="14"/>
        <Label Text="{Binding DueDate, StringFormat='{0:dd-MM-yyyy}'}" FontSize="14"/>
    </StackLayout>
</ContentPage>
